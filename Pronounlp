        <h1 className="text-2xl font-bold text-center text-blue-700">
          Ingreso de Pron칩stico
        </h1>

        <div className="grid grid-cols-2 gap-4">
          <label className="col-span-2">
            Ciudad:
            <select
              name="ciudad"
              value={form.ciudad}
              onChange={handleChange}
              className="w-full mt-1 border rounded p-2"
            >
              <option>La Plata</option>
              <option>Mar del Plata</option>
              <option>Jun칤n</option>
            </select>
          </label>

          <label>
            Fecha:
            <input
              type="date"
              name="fecha"
              value={form.fecha}
              onChange={handleChange}
              className="w-full mt-1 border rounded p-2"
            />
          </label>

          <label>
            Temp. M칤n:
            <input
              type="number"
              name="tmin"
              value={form.tmin}
              onChange={handleChange}
              className="w-full mt-1 border rounded p-2"
            />
          </label>

          <label>
            Temp. M치x:
            <input
              type="number"
              name="tmax"
              value={form.tmax}
              onChange={handleChange}
              className="w-full mt-1 border rounded p-2"
            />
          </label>

          <label>
            Cielo Ma침ana:
            <input
              type="text"
              name="cielo.ma침ana"
              value={form.cielo.ma침ana}
              onChange={handleChange}
              className="w-full mt-1 border rounded p-2"
              placeholder="Ej: Parcialmente nublado"
            />
          </label>

          <label>
            Cielo Tarde:
