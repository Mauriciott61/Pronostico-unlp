'use client';
import { useState } from 'react';

export default function Home() {
  const [form, setForm] = useState({
    ciudad: 'La Plata',
    fecha: '',
    tmin: '',
    tmax: '',
    cielo: { ma침ana: '', tarde: '', noche: '' },
    lluvia: false,
    viento: '',
  });

  const handleChange = (e) => {
    const { name, value, type, checked } = e.target;

    if (name.includes('cielo.')) {
      const parte = name.split('.')[1];
      setForm((prev) => ({
        ...prev,
        cielo: { ...prev.cielo, [parte]: value },
      }));
    } else if (type === 'checkbox') {
      setForm((prev) => ({ ...prev, [name]: checked }));
    } else {
      setForm((prev) => ({ ...prev, [name]: value }));
    }
  };

  const handleSubmit = async (e) => {
    e.preventDefault();
    console.log('Pron칩stico enviado:', form);

    // 游늷 Ac치 se puede conectar a Google Sheets o guardar en otro lugar
    alert('Pron칩stico cargado (simulado)');
